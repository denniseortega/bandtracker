<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <meta charset="utf-8">
  <title>Band Tracker</title>
  </head>
  <body>
    <div class="container">
    <h1>Bands List</h1>
      <nav>
        <a href="/home">Home</a> |
        <a href="/bands/list">Bands List</a> |
        <a href="/venues/list">Venues List</a>
      </nav>
        @if (@Model.Count == 0)
       {
         <p><span class="red">No band matches your search</span></p>
       } else
       {
         <h2>Found Bands:</h2>
         <ul>
           @foreach (var band in @Model)
           {
             <li><a href="/@band.GetId()/details">@band.GetName()</a>
             </li>
           }
         </ul>
  </body>
</html>
